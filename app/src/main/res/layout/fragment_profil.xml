<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ui.profil.ProfilFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        >
        <ImageView
            android:background="@drawable/circle"
            android:id="@+id/profil_avatar"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_width="412dp"
            android:layout_height="365dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/avatar" />


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#808080"
            android:gravity="center_horizontal"
            android:layout_marginTop="190dp"
            android:text="DATA DIRI"
            android:textAlignment="center"
            android:textSize="10pt"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Nama Siswa :"
            android:textColor="#000000"
            android:textSize="7pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profil_nama"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:fontFamily="Impact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:layout_height="match_parent"
            android:text="Tempat, Tanggal Lahir :"
            android:textSize="7pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profil_ttl"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:fontFamily="Impact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:text="Alamat :"
            android:textColor="#000000"
            android:textSize="7pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profil_alamat"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:text="Kelas :"
            android:textColor="#000000"
            android:textSize="7pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profil_kelas"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:text="Jurusan :"
            android:textSize="7pt"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profil_jurusan"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:text="Nama Wali :"
            android:textColor="#000000"
            android:textSize="7pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profil_nama_wali"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>