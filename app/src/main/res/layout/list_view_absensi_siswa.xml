<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="30dp"
    >

    <TextView
        android:id="@+id/absensi_bulan"
        android:background="@drawable/border1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Bulan"/>

    <TextView
        android:id="@+id/absensi_1"
        android:background="@drawable/border1"
        android:layout_width="0dp"
        android:textAlignment="center"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:text="Minggu 1"
        android:gravity="center_horizontal" />


    <TextView
        android:id="@+id/absensi_2"
        android:textAlignment="center"
        android:background="@drawable/border1"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:text="Minggu 2"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/absensi_3"
        android:textAlignment="center"
        android:background="@drawable/border1"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:text="Minggu 3"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/absensi_4"
        android:textAlignment="center"
        android:background="@drawable/border1"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:text="Minggu 4"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/absensi_5"
        android:textAlignment="center"
        android:background="@drawable/border1"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:text="Minggu 5"
        android:gravity="center_horizontal" />

</LinearLayout>